
    <% include cabecera.ejs %>

  <div class="TagList">
    <% include tags.ejs %>
  </div>
  <div class="AdsList">
    <h2><%= __('Available advertisements') %></h2>
    <div class="AdsListed">
      <% if (anuncios.length > 0) { %>
        <% anuncios.forEach(anuncio => { %>
            <div class="anuncio">
                <div class="article_name">
                  <h3><p><%= anuncio.name %></p></h3>
                </div>

                <div class = "article_price">
                  <% if (anuncio.sale) { %>
                    <p><%= __('Selling price') %>: <b><%= anuncio.price %> €</b></p>
                  <% } else { %>
                    <p><%= __('Wanted for') %>: <b><%= anuncio.price %> €</b></p>
                  <% } %>
                <div class = "article_tag"></div>
                  <p>Tags: "<%= anuncio.tag.join(', ') %>" </p>
                </div>
                
                <div class = "article_image">
                  <img src="thumbnails/small_<%= anuncio.photo %>" alt="Imagen descriptiva del artículo anunciado">
                </div>
            </div>

            <% }) %>
          <% }else { %>
              <p> Lo sentimos, no existen anuncios de las características solicitadas.</p>
          <% } %>
    </div>
  </div>

  <% include pie.ejs %>

